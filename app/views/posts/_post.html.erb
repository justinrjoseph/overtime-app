<tr>
  <td><%= post.id %></td>
  <td><%= post.overtime_request %></td>
  <td><%= post.date.strftime('%m/%d/%Y') %></td>
  <td><%= post.user.full_name %></td>
  <td><%= link_to truncate(post.rationale), post %></td>
  <td><%= status_label post.status.upcase %></td>
  <td><%= link_to '', edit_post_path(post), id: "edit_#{post.id}", class: 'glyphicon glyphicon-pencil icons' if policy(post).update? %></td>
  <td><%= link_to '', post, id: "delete_#{post.id}", class: 'glyphicon glyphicon-trash icons', method: :delete, data: { confirm: "Are you sure you want to delete '#{post.rationale}'?" } %></td>
</tr>