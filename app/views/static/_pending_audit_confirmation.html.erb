<% pending_audit_confirmations.each do |pending_audit_confirmation| %>
  <%= link_to "I confirm no overtime for week of #{pending_audit_confirmation.start_date.strftime('%m/%d/%Y')} through #{(pending_audit_confirmation.start_date + 6.days).strftime('%m/%d/%Y')}.", 
              confirm_audit_log_path(pending_audit_confirmation),
              id: "confirm-#{pending_audit_confirmation.id}",
              class: 'btn btn-primary btn-lg btn-block btn-employee',
              data: { confirm: "Are you sure you did not perform overtime for this week?" } %>
<% end %>