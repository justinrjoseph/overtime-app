<% pending_approvals.each do |pending_approval| %>
  <div class="col-md-4">
    <div class="record">
      <h4><%= pending_approval.user.full_name %></h4>
      <p>
        <span class="pending-details">Date Submitted</span>: <%= format_date(pending_approval.date) %>
      </p>
      <p>
        <span class="pending-details">Rationale</span>: <%= truncate(pending_approval.rationale, length: 42) %>
      </p>
      
      <div class="row">
        <div class="col-md-6 column">
          <%= link_to 'Approve', approve_post_path(pending_approval), id: "approve-#{pending_approval.id}", class: 'btn btn-success btn-block approve-btn' %>
        </div>
        
        <div class="col-md-6 column">
          <%= link_to 'Review', edit_post_path(pending_approval), class: 'btn btn-warning btn-block review-btn' %>
        </div>
      </div>
    </div>
  </div>
<% end %>