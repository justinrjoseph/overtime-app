<h1>Posts</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Overtime Requested</th>
      <th>Date</th>
      <th>Reporter</th>
      <th>Rationale</th>
      <th>Status</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  
  <tbody id="posts">
    <%= render @posts %>
  </tbody>
</table>

<div id="paginator">
  <%= paginate @posts, remote: true %>
</div>